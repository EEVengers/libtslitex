[build-system]
requires = ["cython", "numpy", "setuptools"]
build-backend = "setuptools.build_meta"

[project]
name = "tslitex"
version = "@PY_WHL_VERSION_STRING@"
license = "BSD-2-Clause"
authors = [
  {name = "Nate Meyer", email = "nate.devel@gmail.com"},
]
dependencies = ["numpy"]

[tool.setuptools]
packages = ["tslitex"]
ext-modules = [
  { name = "tslitex.tslitex", sources = ["tslitex/tslitex.c"], libraries = ["@PY_EXT_LIBS@"], library-dirs = ["lib"], include-dirs = ["lib/include"]}
]
